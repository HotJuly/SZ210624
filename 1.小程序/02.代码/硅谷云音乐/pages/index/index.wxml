<view class="indexContainer">
    <swiper 
    class="bannerSwiper"
    indicator-active-color="#d43c33"
    indicator-color="ivory"
    indicator-dots
    circular
    >
        <!-- <swiper-item 
        class="bannerItem"
        v-for="(item,index) in banners"
        :key="item.pic"
        > -->
        <swiper-item 
        class="bannerItem"
        wx:for="{{banners}}"
        wx:for-item="banner"
        wx:key="pic"
        >
            <image 
            class="bannerImg" 
            src="{{banner.pic}}"
            ></image>
        </swiper-item>
    </swiper>
    <!-- <view class="iconfont icon-meirituijian-">
    </view> -->
    <view class="nav">
        <view class="navItem">
            <view class="iconfont icon-meirituijian-"> 
            </view>
            <text class="navTitle">每日推荐</text>
        </view>
        <view class="navItem">
            <view class="iconfont icon-gedan1"> 
            </view>
            <text class="navTitle">歌单</text>
        </view>
        <view class="navItem">
            <view class="iconfont icon-icon-ranking"> 
            </view>
            <text class="navTitle">排行榜</text>
        </view>
        <view class="navItem">
            <view class="iconfont icon-diantai"> 
            </view>
            <text class="navTitle">电台</text>
        </view>
        <view class="navItem">
            <view class="iconfont icon-zhiboguankanliangbofangsheyingshexiangjixianxing"> 
            </view>
            <text class="navTitle">直播</text>
        </view>
    </view>

    <!-- 推荐歌曲区域 -->
    <view class="recommendContainer">
       <!-- NavHeader区域 -->
       <NavHeader title="推荐歌曲" moreTitle="为你精心推荐"/>
        <scroll-view 
        class="recommendScroll"
        enable-flex
        scroll-x
        >
            <view 
            class="recommendItem"
            wx:for="{{recommendList}}"
            wx:key="id"
            >
                <image class="guigulogo" src="{{item.picUrl}}"></image>
                <view class="recommendName">
                {{item.name}}
                </view>
            </view>
        </scroll-view>
    </view>

    <view class="topContainer">
        <NavHeader title="排行榜" moreTitle="热歌风向标"/>
        <swiper 
        class="topSwiper"
        next-margin="50"
        >
            <swiper-item 
            class="topItem"
            wx:for="{{topList}}"
            wx:key="id"
            >
                <view class="topTitle">
                    {{item.name}}
                </view>
                <view 
                class="songItem"
                wx:for="{{item.list}}"
                wx:key="id"
                >
                    <image class="songImg" src="{{item.imgUrl}}"></image>
                    <view class="songIndex">{{index+1}}</view>
                    <view class="songName">
                    {{item.name}}
                    </view>
                </view>
            </swiper-item>
        </swiper>
    </view>
</view>